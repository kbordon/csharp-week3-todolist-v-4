<h1>To Do List</h1>
<hr />
<h2>Edit task: @Model.GetDescription()</h2>
<form action="/tasks/@Model.GetId()/edit" method="post">
  <label for="name">Name:</label>
  <input type="text" name="newname" value="@Model.GetDescription()">
  <button type="submit">Edit</button>
</form>
<form action="/tasks/@Model.GetId()/delete" method="post">
  <button type="submit">Delete</button>
</form>
<h4><a href="/">Return home</a></h4>
