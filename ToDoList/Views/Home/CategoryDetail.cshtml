<h3>Here all the tasks in this category</h3>
@if(Model.Count == 1)
{
  <p>How dare you, please enter a legit task</p>
}
else
{
  <ol>
  @foreach (var task in @Model["tasks"])
  {
    <li>@task.GetDescription() at @task.GetDueDate() | <a href="/tasks/@task.GetId()/edit">Edit</a></li>
  }
  </ol>
}
<p><a href='/categories/@Model["category"].GetId()/tasks/new'>Add a new task</a></p>
<p><a href='/'>Return to Main Page</a></p>
